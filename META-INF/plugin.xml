<idea-plugin version="2">
  <id>com.intellij.plugin.poe</id>
  <name>PageObject evaluator</name>
  <version>0.1</version>
  <vendor url="https://github.com/bjorm/PageObjectEvaluator">https://github.com/bjorm</vendor>

  <description><![CDATA[
    Allows evaluating PageObjects without starting a full Selenium test run, just feed it some HTML.

    <ul>
        <li>Evaluates @FindBy* by calling PageFactory.initElements()</li>
        <li>Tries to inject WebDriver into PageObject</li>
        <li>HTML snippets work as well</li>
    </ul>

    ]]></description>

  <change-notes><![CDATA[

    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="123.72"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products-->
  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
      <group popup="true" text="Evaluate PageObject" id="pageObjectEvaluatorMenu" >
          <add-to-group group-id="ToolsMenu" anchor="last"/>
          <action id="pageObjectEvaluator.fileOrUrl" class="com.intellij.plugins.pageObjectEvaluator.EvaluateAgainstFileOrUrlAction" text="File/URL" description="Evaluate PageObject against an URL or File"/>
          <action id="pageObjectEvaluator.pastedText" class="com.intellij.plugins.pageObjectEvaluator.EvaluateAgainstPastedHtmlAction" text="Pasted text" description="Evaluate PageObject against pasted HTML"/>
      </group>

  </actions>

</idea-plugin>